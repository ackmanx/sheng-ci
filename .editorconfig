;
; This file automatically sets your editor style settings, so you don't have to and the team remains consistent
; Settings are NOT applied automatically on save or anything like that
; They are used during typing
;

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
tab_width = 4
continuation_indent_size = 4
max_line_length = off
